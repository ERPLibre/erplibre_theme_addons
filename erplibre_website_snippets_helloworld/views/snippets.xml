<odoo>

  <!-- Snippet Structure -->
  <template id="s_hello_world" name="Hello World">
    <section class="o_hello_world text-center pt64 pb16">
      <div class="container">
        <h1 class="hello_world_text">Hello World</h1>
        <h2 class="secondary_text">Lorem ipsum</h2>
      </div>
    </section>
  </template>

  <!-- Add snippet_structure to menu -->
  <template id="add_snippet_structure_to_menu" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
      <t t-snippet="erplibre_website_snippets_helloworld.s_hello_world" t-thumbnail="/erplibre_website_snippets_helloworld/static/src/img/p.png"/>
    </xpath>
  </template>

  <!-- Add stylesheet -->
  <template id="assets_frontend_erplibre_website_snippets_helloworld" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets_helloworld/static/src/scss/snippet.scss"/>
    </xpath>
  </template>
</odoo>
