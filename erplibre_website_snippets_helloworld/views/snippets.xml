<odoo>
  <!-- Snippet Content-->
  <template id="s_helloworld" name="Helloworld">
    <section class="website_helloworld">
        <div id="helloworld">
          <h1 id="message">Helloworld</h1>
        </div>
    </section>
  </template>

  <!-- Add snippets to menu -->
  <template id="add_snippet_structure_to_menu" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
      <t t-snippet="erplibre_website_snippets_helloworld.s_helloworld" t-thumbnail="/erplibre_website_snippets_helloworld/static/src/img/helloworld.png"/>
    </xpath>
  </template>
  <!-- Add stylesheet & javascript-->
  <template id="assets_frontend_erplibre_website_snippets_cards" inherit_id="website.assets_frontend">
    <xpath expr="//script[last()]" position="after">
      <script type="text/javascript" src="/erplibre_website_snippets_helloworld/static/src/js/website_helloworld.js"/>
    </xpath>
  </template>
</odoo>
