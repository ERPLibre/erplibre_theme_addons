      <t t-snippet="erplibre_website_snippets.s_section_header" t-thumbnail="/erplibre_website_snippets/static/src/img/section_header.png"/>
      <t t-snippet="erplibre_website_snippets.s_steps" t-thumbnail="/erplibre_website_snippets/static/src/img/steps.png"/>
      <t t-snippet="erplibre_website_snippets.s_cards_extend" t-thumbnail="/erplibre_website_snippets/static/src/img/cards_extend.png"/>
      <t t-snippet="erplibre_website_snippets.s_cards_flip" t-thumbnail="/erplibre_website_snippets/static/src/img/cards_flip.png"/>
      <t t-snippet="erplibre_website_snippets.s_five_part_panel" t-thumbnail="/erplibre_website_snippets/static/src/img/five_part_panel.png"/>
    </xpath>
  </template>

  <!-- Add snippets options -->
  <template id="snippet_options" inherit_id="website.snippet_options">
    <xpath expr=".">
      <!-- Horizontal alignment options | Screensize lg or above-->
      <div data-selector=".o_avatar, .o_image_fluid, .o_btn_outline, .o_h1, .o_p, .o_small, .s_btn">
        <div class="dropdown-submenu">
          <a tabindex="-2" href="#" class="dropdown-item">
            <i class="fa fa-align-left"/>Alignment(+=LG)</a>
          <div class="dropdown-menu" role="menu">
            <a href="#" class="dropdown-item" data-select-class="text-lg-left">Left</a>
            <a href="#" class="dropdown-item" data-select-class="text-lg-center">Center</a>
            <a href="#" class="dropdown-item" data-select-class="text-lg-right">Right</a>
          </div>
        </div>
      </div>
      
      <!-- Horizontal alignment options | Screensize md or below-->
      <div data-selector=".o_avatar, .o_image_fluid, .o_btn_outline, .o_h1, .o_p, .o_small, .s_btn">
        <div class="dropdown-submenu">
          <a tabindex="-2" href="#" class="dropdown-item">
            <i class="fa fa-align-left"/>Alignment(-=MD)
          </a>
          <div class="dropdown-menu" role="menu">
            <a href="#" class="dropdown-item" data-select-class="text-md-left">Left</a>
            <a href="#" class="dropdown-item" data-select-class="text-md-center">Center</a>
            <a href="#" class="dropdown-item" data-select-class="text-md-right">Right</a>
          </div>
        </div>
      </div>

      <!-- Vertical alignment options -->
      <div data-js="sizing_y" data-selector="section, .row > div, :not(.o_gallery > .container) > .o_avatar, .o_image_fluid, .o_btn_outline, o_bullets_finger, .o_h1, .o_h2, .o_h3, .o_h4, .o_h5, .o_h6, .o_p, .o_small"/>

      <!-- Hidden options based on screensize-->
      <div data-selector=".o_image_fluid, .o_btn_outline">
        <div class="dropdown-submenu">
          <a tabindex="-2" href="#" class="dropdown-item">
            <i class="fa fa-align-left"/>Visiblility
          </a>
          <div class="dropdown-menu" role="menu">
            <a href="#" class="dropdown-item" data-select-class="d-none d-lg-block">Visible above LG</a>
            <a href="#" class="dropdown-item" data-select-class="d-block d-lg-none d-xl-none">Visible below LG</a>
          </div>
        </div>
      </div>

      <!-- Position options-->
      <div data-selector=".o_image_fluid, .o_h3, .o_h4">
        <div class="dropdown-submenu">
          <a tabindex="-2" href="#" class="dropdown-item">
            <i class="fa fa-align-left"/>Position
          </a>
          <div class="dropdown-menu" role="menu">
            <a href="#" class="dropdown-item" data-select-class="position-relative">Relative</a>
            <a href="#" class="dropdown-item" data-select-class="position-absolute">Absolute</a>
            <a href="#" class="dropdown-item" data-select-class="position-fixed">Fixed</a>
            <a href="#" class="dropdown-item" data-select-class="position-sticky">Sticky</a>
          </div>
        </div>
      </div>

      <!-- Flippable options-->
      <div data-selector=".o_card_flip">
        <div class="dropdown-submenu">
          <a tabindex="-2" href="#" class="dropdown-item">
            <i class="fa fa-align-left"/>flip?
          </a>
          <div class="dropdown-menu" role="menu">
            <a href="#" class="dropdown-item" data-select-class="flippable">Yes</a>
          </div>
        </div>
      </div>

      <!-- Absolute position options-->
      <div data-selector=".o_image_fluid">
        <div class="dropdown-submenu">
          <a tabindex="-2" href="#" class="dropdown-item">
            <i class="fa fa-align-left"/>Absolute Positioning
          </a>
          <div class="dropdown-menu" role="menu">
            <a href="#" class="dropdown-item" data-select-class="top-left">Top-left</a>
            <a href="#" class="dropdown-item" data-select-class="top-right">Top-right</a>
            <a href="#" class="dropdown-item" data-select-class="bottom-left">Bottom-left</a>
            <a href="#" class="dropdown-item" data-select-class="bottom-right">Bottom-right</a>
            <a href="#" class="dropdown-item" data-select-class="absolute-center">Center</a>
          </div>
        </div>
      </div>

      <!-- Color options -->
			<div data-js="colorpicker" data-selector=".o_card_flip, .o_pill, .o_image_fluid">
        <div class="dropdown-submenu">
          <a tabindex="-1" href="#" class="dropdown-item">
            <i class="fa fa-eyedropper"/>Color
          </a>
          <div class="dropdown-menu" role="menu"/>
        </div>
      </div>

      <!-- Drag & drop options -->
      <div data-js="content" 
        data-selector=".o_avatar, .o_image_fluid, .o_btn_outline, .o_bullets_finger, .o_h1, .o_h2, .o_h3, .o_h4, .o_h5, .o_h6, .o_p, .o_small, .o_pill"
        data-drop-near="p, h1, h2, h3, blockquote, .s_btn, .s_card, .s_alert, .o_facebook_page, .s_share, .s_rating, .s_hr, .o_avatar, .o_image_fluid, .o_btn_outline, .o_bullets_finger, .o_h1, .o_h2, .o_h3, .o_h4, .o_h5, .o_h6, .o_p, .o_small, .o_pill"
        data-drop-in=".content"/>
 
    </xpath>
  </template>

  <!-- Add stylesheet -->
  <template id="assets_frontend_erplibre_website_snippets" inherit_id="website.assets_frontend">
    <xpath expr="//link[last()]" position="after">
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets/static/src/scss/snippet_content.scss" />
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets/static/src/scss/snippet_steps.scss" />
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets/static/src/scss/snippet_cards_extend.scss" />
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets/static/src/scss/snippet_cards_flip.scss" />
      <link rel="stylesheet" type="text/scss" href="/erplibre_website_snippets/static/src/scss/snippet_five_part_panel.scss" />
    </xpath>
  </template>
</odoo>
